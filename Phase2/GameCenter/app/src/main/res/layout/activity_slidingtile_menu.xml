<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_sliding_tiles_background"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="185dp"
        android:background="#FCCA46"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="20dp"
        android:background="#FCCA46"
        android:text="Button"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="20dp"
        android:background="#FCCA46"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="invisible" />


    <Button
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:background="#FCCA46"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/newGame"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="380dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        app:srcCompat="@drawable/ic_new_game_button" />

    <ImageButton
        android:id="@+id/loadGame"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="330dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        app:srcCompat="@drawable/ic_load_game_button" />

    <ImageButton
        android:id="@+id/deleter"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="280dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="Delete a Save"
        app:srcCompat="@drawable/ic_delete_game_button" />

    <ImageButton
        android:id="@+id/scoreButton"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="230dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        app:srcCompat="@drawable/ic_score_button" />

    <EditText
        android:id="@+id/fileInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#FCCA46"
        android:ems="7"
        android:hint="Name your game"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1"
        android:singleLine="true"
        android:textColor="#FE7F2D"
        android:textColorHint="#FCCA46"
        android:visibility="invisible" />


</RelativeLayout>